  </item>

    <item>        
        <shape>
            <gradient
               android:startColor="@color/question_background_color"
               android:endColor="@color/question_background_color"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/question_tex_color" />
            <corners
               android:radius="@dimen/background_redious" />
