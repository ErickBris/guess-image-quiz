<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
               android:endColor="@android:color/white"
               android:startColor="@android:color/white"
               android:angle="270" />
            <stroke
               android:width="@dimen/background_border"
               android:color="@color/app_theme_color" />
            <corners
               android:radius="@dimen/background_redious" />
            <padding
               android:left="0dp"
               android:top="@dimen/background_peding"
               android:right="0dp"
               android:bottom="@dimen/background_peding" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
               android:startColor="@android:color/transparent"
               android:endColor="@android:color/transparent"
               android:angle="270" />
            <stroke
               android:width="@dimen/background_border"
               android:color="@color/app_theme_color" />
            <corners
               android:radius="@dimen/background_redious" />
            <padding
               android:left="0dp"
               android:top="@dimen/background_peding"
               android:right="0dp"
               android:bottom="@dimen/background_peding" />
        </shape>
    </item>

  <item android:state_enabled="false">
          <shape>
            <gradient
               android:startColor="@android:color/transparent"
               android:endColor="@android:color/transparent"
               android:angle="270" />
            <stroke
               android:width="@dimen/background_border"
               android:color="@color/app_theme_color" />
            <corners
               android:radius="@dimen/background_redious" />
            <padding
               android:left="0dp"
               android:top="@dimen/background_peding"
               android:right="0dp"
               android:bottom="@dimen/background_peding" />
        </shape>
  </item>

    <item>        
        <shape>
            <gradient
               android:startColor="@color/question_background_color"
               android:endColor="@color/question_background_color"
               android:angle="270" />
            <stroke
               android:width="@dimen/background_border"
               android:color="@color/app_theme_color" />
            <corners
               android:radius="@dimen/background_redious" />
            <padding
               android:left="0dp"
               android:top="@dimen/background_peding"
               android:right="0dp"
               android:bottom="@dimen/background_peding" />
        </shape>
    </item>
</selector>